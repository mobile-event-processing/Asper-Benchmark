<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
>
<GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

    <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="15dp"
            android:text="Initiate measurements"
            android:id="@+id/start" android:layout_row="0"
            android:layout_column="0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Task"
            android:layout_row="1" android:layout_column="0"/>
    <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/taskChooser"
            android:layout_row="2" android:layout_column="0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Workers #"
            android:layout_row="3" android:layout_column="0"/>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/workers"
            android:entries="@array/workers"
            android:layout_row="4" android:layout_column="0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Data-item population #"
            android:layout_row="6" android:layout_column="0" />
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:text="100000"
            android:id="@+id/rate"
            android:layout_row="7"
            android:layout_column="0"
            />
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/shuffle"
            android:text="Shuffle events"
            android:checked="true"
            android:layout_row="8" android:layout_column="0" />
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Runtime (seconds)"
            android:layout_row="10" android:layout_column="0" />
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:text="60"
            android:id="@+id/runtime"
            android:layout_row="11"
            android:layout_column="0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Warmup (seconds)"
            android:layout_row="12" android:layout_column="0" />
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:text="120"
            android:id="@+id/warumup"
            android:layout_row="13"
            android:layout_column="0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Database population #"
            android:layout_row="15" android:layout_column="0" />
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:text="10000"
            android:id="@+id/database_population"
            android:layout_row="16"
            android:layout_column="0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Database Cache #"
            android:layout_row="17" android:layout_column="0" />
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:text="1000"
            android:id="@+id/database_cache"
            android:layout_row="18"
            android:layout_column="0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Repetitions #"
            android:layout_row="19" android:layout_column="0" />
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:text="3"
            android:id="@+id/repetitions"
            android:layout_row="20"
            android:layout_column="0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Rest (seconds)"
            android:layout_row="21" android:layout_column="0" />
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:text="100"
            android:id="@+id/rest"
            android:layout_row="22"
            android:layout_column="0"/>
  </GridLayout>
</ScrollView>
